{
  "openapi": "3.0.0",
  "info": {
    "title": "Peekorobo API",
    "version": "1.0.0",
    "description": "API for FRC data (teams, events, matches, rankings, etc). All endpoints require an API key in the 'X-API-Key' header."
  },
  "servers": [
    {"url": "/api/v1"}
  ],
  "paths": {
    "/teams": {
      "get": {
        "summary": "Get paginated list of teams",
        "parameters": [
          {"name": "page", "in": "query", "schema": {"type": "integer"}, "required": false, "description": "Page number (default 1)"},
          {"name": "per_page", "in": "query", "schema": {"type": "integer"}, "required": false, "description": "Teams per page (default 50)"}
        ],
        "responses": {"200": {"description": "List of teams"}}
      }
    },
    "/team/{team_key}": {
      "get": {
        "summary": "Get a single team by key",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Team info"}, "404": {"description": "Not found"}}
      }
    },
    "/team/{team_key}/matches": {
      "get": {
        "summary": "Get all matches for a team",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of matches"}}
      }
    },
    "/team/{team_key}/events": {
      "get": {
        "summary": "Get all events for a team",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of events"}}
      }
    },
    "/team/{team_key}/awards": {
      "get": {
        "summary": "Get all awards for a team",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of awards"}}
      }
    },
    "/team/{team_key}/{event_key}/matches": {
      "get": {
        "summary": "Get matches for a specific team at a specific event",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of matches"}}
      }
    },
    "/team/{team_key}/{event_key}/awards": {
      "get": {
        "summary": "Get awards for a specific team at a specific event",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of awards"}}
      }
    },
    "/team/{team_key}/{event_key}/rankings": {
      "get": {
        "summary": "Get ranking for a specific team at a specific event",
        "parameters": [
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Ranking info"}}
      }
    },
    "/events": {
      "get": {
        "summary": "Get paginated list of events",
        "parameters": [
          {"name": "page", "in": "query", "schema": {"type": "integer"}, "required": false, "description": "Page number (default 1)"},
          {"name": "per_page", "in": "query", "schema": {"type": "integer"}, "required": false, "description": "Events per page (default 50)"}
        ],
        "responses": {"200": {"description": "List of events"}}
      }
    },
    "/event/{event_key}": {
      "get": {
        "summary": "Get a single event by key",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Event info"}, "404": {"description": "Not found"}}
      }
    },
    "/event/{event_key}/matches": {
      "get": {
        "summary": "Get all matches for an event",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of matches"}}
      }
    },
    "/event/{event_key}/{team_key}/matches": {
      "get": {
        "summary": "Get matches for a specific team at a specific event",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of matches"}}
      }
    },
    "/event/{event_key}/rankings": {
      "get": {
        "summary": "Get rankings for an event",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Rankings"}}
      }
    },
    "/event/{event_key}/{team_key}/rankings": {
      "get": {
        "summary": "Get ranking for a specific team at a specific event",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Ranking info"}}
      }
    },
    "/event/{event_key}/awards": {
      "get": {
        "summary": "Get all awards for an event",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of awards"}}
      }
    },
    "/event/{event_key}/{team_key}/awards": {
      "get": {
        "summary": "Get awards for a specific team at a specific event",
        "parameters": [
          {"name": "event_key", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "team_key", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "List of awards"}}
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {"200": {"description": "API is healthy"}}
      }
    },
    "/": {
      "get": {
        "summary": "API information",
        "responses": {"200": {"description": "API info"}}
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  },
  "security": [{"ApiKeyAuth": []}]
}